{
  "compilerOptions": {
    /* Base Options */
    "lib": ["dom", "dom.iterable", "ES2023"],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "target": "ES2022",
    "moduleDetection": "force",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noErrorTruncation": true,

    /* Strictness */
    "strict": true,
    "checkJs": true,
    "noUncheckedIndexedAccess": false,

    /* Module Resolution */
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next-dev/types/**/*.ts",
    ".next-prod/types/**/*.ts",
    "src/types/**/*.d.ts",
    "next.config.mjs"
  ],

  "exclude": ["node_modules"]
}
