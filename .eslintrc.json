{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "react/jsx-no-literals": "warn",

    "no-restricted-imports": [
      "error",
      {
        "name": "next/link",
        "message": "Please import from `@/i18n/routing` instead."
      },
      {
        "name": "next/navigation",
        "importNames": [
          "redirect",
          "permanentRedirect",
          "useRouter",
          "usePathname"
        ],
        "message": "Please import from `@/i18n/routing` instead."
      }
    ]
  }
}
