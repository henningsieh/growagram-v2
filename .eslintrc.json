{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "@typescript-eslint/no-unused-vars": "warn", // only warning!

    "react/jsx-no-literals": "warn", // translation needed

    "no-restricted-imports": [
      // translation needed
      "error",
      {
        "name": "next/link",
        "message": "Please import from `@/i18n/routing` instead."
      },
      {
        "name": "next/navigation",
        "importNames": [
          "redirect",
          "permanentRedirect",
          "useRouter",
          "usePathname"
        ],
        "message": "Please import from `@/i18n/routing` instead."
      }
    ]
  }
}
